extends ../layouts/default
include ../mixins/loremText

block vars
    - var title = 'Каталог запчастей';

block main-section
    section.main-wrapper__section
        .uk-container
            include ../includes/catalog/catalog
            ul.uk-pagination(uk-margin)
                li(class="uk-hidden@s")
                    a(href="#")
                        span(uk-pagination-previous)
                li
                    a(href="#") 1
                li.uk-disabled(class="uk-hidden@s")
                    span ...
                li.uk-active
                    a(href="#") 2
                li(class="uk-visible@s")
                    a(href="#") 3
                li.uk-disabled
                    span ...
                li(class="uk-visible@s")
                    a(href="#") 11
                li(class="uk-visible@s")
                    a(href="#") 12
                li(class="uk-visible@s")
                    a(href="#") 13
                li.uk-disabled(class="uk-visible@s")
                    span ...
                li(class="uk-visible@s")
                    a(href="#") 21
                li(class="uk-visible@s")
                    a(href="#") 22
                li
                    a(href="#") 23
                li(class="uk-hidden@s")
                    a(href="#")
                        span(uk-pagination-next)

    section.main-wrapper__section.main-wrapper__section--border
        .uk-container
            +loremText(true, "uk-child-width-1-2@s")

extends template

block modal-vars
    - var modalID = "modal-login"

block modal-title
    | Войти в личный кабинет

block modal-body
    form.uk-form-stacked
        .uk-margin
            label.uk-form-label(for="user-email") E-mail <span class="uk-text-primary">*</span>
            .uk-form-controls
                input.uk-input(id="user-email" type="text" placeholder="client@mail.com")
        .uk-margin
            label.uk-form-label(for="user-password") Пароль <span class="uk-text-primary">*</span>
            .uk-form-controls
                input.uk-input(id="user-password" type="password" placeholder="******")
        .uk-form-btns
            a.uk-link Забыли пароль?
            .uk-margin-top.uk-grid.uk-grid-medium(uk-grid class="uk-child-width-1-1 uk-child-width-auto@s")
                .uk-flex-1
                    button.uk-button.uk-button-primary.uk-width-1-1(type="submit") Войти
                div
                    button.uk-button.uk-button-default.uk-width-1-1(type="button" uk-toggle="target: #modal-registration") Зарегистрироваться

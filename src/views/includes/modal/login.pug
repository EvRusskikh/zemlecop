extends template

block modal-vars
    - var modalID = "modal-login"
    -
        var form = [
            {
                label: "E-mail",
                id: "login-user-email",
                placeholder: "client@mail.com",
                type: "email",
                autocomplete: "off",
                recovery: true
            },
            {
                label: "Пароль",
                id: "login-user-password",
                placeholder: "******",
                autocomplete: "new-password",
                type: "password",
                recovery: true
            }
        ]

block modal-title
    | Войти в личный кабинет

block modal-form-buttons
    .uk-form-btns
        a.uk-link(href="#modal-recover" uk-toggle) Забыли пароль?
        .uk-margin-top.uk-grid.uk-grid-medium(uk-grid class="uk-child-width-1-1 uk-child-width-auto@s")
            div
                button.uk-button.uk-button-primary.uk-width-1-1(type="submit") Войти
            div
                button.uk-button.uk-button-default.uk-width-1-1(type="button" uk-toggle="target: #modal-registration") Зарегистрироваться

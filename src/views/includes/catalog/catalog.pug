.catalog(uk-filter="target: .catalog__list")
    ul.uk-margin-bottom.uk-subnav.catalog-filter
        li.uk-active(uk-filter-control)
            a(href="#") Все
        each item in mainMenu[0].children
            li(uk-filter-control="[data-type="+ item.title +"]")
                a(href="#")= item.title

    include catalog-search

    table.uk-table.catalog__content
        thead.catalog__head
            tr
                th.catalog__img
                th.catalog__name Наименование
                th.catalog__col1 № по Carraro
                th.catalog__col1 № производителя
                th.catalog__col2 Вес, кг
                th.catalog__col3 Екб
                th.catalog__col3 Екб 2
                th.catalog__col3 Мск
                th.catalog__col3 Спб
                th.catalog__col2 Транзит
                th.catalog__col2 Цена, руб
                th.catalog__number Кол-во
                th.catalog__btn
        tbody.catalog__list
            each item in tableBody
                tr(data-type=item.type)
                    td
                        img(src=item.img alt=item.name)
                    td
                        a(href="/catalog-item.html")=item.name
                    td=item.carraro
                    td=item.developer
                    td=item.weight
                    td=item.ekb
                    td=item.ekb2
                    td=item.msk
                    td=item.spb
                    td=item.tranzit
                    td=item.price
                    td
                        input.uk-input.uk-form-small(type="text")
                    td.catalog__btn
